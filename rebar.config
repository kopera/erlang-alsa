{minimum_otp_vsn, "22.0"}.
{erl_opts, [debug_info]}.
{deps, [
    {reg, "0.1.0"}
]}.

{pre_hooks, [
    {"(linux)", compile, "make -C c_src/nif"},
    {"(linux)", compile, "make -C c_src/mixer"}
]}.
{post_hooks, [
    {"(linux)", clean, "make -C c_src/nif clean"},
    {"(linux)", clean, "make -C c_src/mixer clean"}
]}.

{shell, [
  % {config, "config/sys.config"},
    {apps, [alsa]}
]}.